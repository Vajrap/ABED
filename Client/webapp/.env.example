# ABED Webapp Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:7890
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=ABED
VITE_APP_VERSION=0.1.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_MUSIC_PLAYER=true
VITE_ENABLE_GUEST_LOGIN=false
VITE_ENABLE_REGISTRATION=true

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,th

# Debug Settings
VITE_DEBUG_MODE=true
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL=info

# Performance Settings
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# Music Player Configuration
VITE_MUSIC_DEFAULT_VOLUME=0.7
VITE_MUSIC_AUTO_PLAY=false
VITE_MUSIC_PERSIST_SETTINGS=true

# UI Theme Configuration
VITE_THEME_MODE=light
VITE_CUSTOM_THEME=medieval

# Security Settings (for production)
# VITE_CSP_ENABLED=true
# VITE_HTTPS_ONLY=true

# Analytics (if needed)
# VITE_ANALYTICS_ID=
# VITE_ENABLE_ANALYTICS=false

# External Services
# VITE_DISCORD_WEBHOOK_URL=
# VITE_ERROR_REPORTING_URL=

# Development Only
VITE_HOT_RELOAD=true
VITE_DEV_TOOLS=true
