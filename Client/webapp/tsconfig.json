{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components": [
        "./src/components"
      ],
      "@/views": [
        "./src/views"
      ],
      "@/viewmodels": [
        "./src/viewmodels"
      ],
      "@/models": [
        "./src/models"
      ],
      "@/services": [
        "./src/services"
      ],
      "@/localization": [
        "./src/localization"
      ],
      "@/styles": [
        "./src/styles"
      ],
      "@/types": [
        "./src/types"
      ],
      "@/theme": [
        "./src/theme"
      ],
      "@/utils": [
        "./src/utils"
      ],
      "@/L10N": [
        "./src/L10N"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
